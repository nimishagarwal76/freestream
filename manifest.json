{
    "name": "freestream",
    "version": "1.0",
    "description": "Allows HLS streaming",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}